<%= form_for(@cliente) do |f| %>
<p>
	<%= f.label :razaosocial %>
	<%= f.text_field :razaosocial %>
	<% if @cliente.errors.has_key? :razaosocial %>
	<div class="error_message">
		<%= @cliente.errors[:razaosocial].first %>
	</div>
	<% end %>
</p>

<div class="field">
	<%= f.label :nomefantasia %>
	<%= f.text_field :nomefantasia %>
