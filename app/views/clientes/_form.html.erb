	<% if @cliente.errors.has_key? :documento %>
	<div class="error_message">
		<%= @cliente.errors[:documento].first %>
	</div>
	<% end %>
</div>
<div class="field">
	<%= f.label :telefone %>

	<%= f.text_field :telefone %>
	<% if @cliente.errors.has_key? :telefone %>
	<div class="error_message">
		<%= @cliente.errors[:telefone].first %>
	</div>
	<% end %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
