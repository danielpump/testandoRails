<div class="row">
	<div class="col-lg-12">
		<div class="box">
			<header>
				<div class="icons">
					<i class="fa fa-th-large"></i>
				</div>
				<h5><%= t '.titulo' %></h5>

				<!-- .toolbar -->
				<div class="toolbar">
					<nav style="padding: 8px;">
						<a href="javascript:;" class="btn btn-default btn-xs full-box"> <i class="fa fa-expand"></i> </a>
					</nav>
				</div><!-- /.toolbar -->
			</header>
			<div id="collapseOne" class="body">
				<%= form_for @cliente, :html => {:class => "form-horizontal", :id => "block-validate"} do |f| %>

				<div class="form-group">
					<label class="control-label col-lg-4"><%= f.label :razaosocial %></label>
					<div class="col-lg-4">
						<%= f.text_field :razaosocial, class:"form-control" %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4"><%= f.label :nomefantasia %>
						<br>
					</label>
					<div class="col-lg-4">
						<%= f.text_field :nomefantasia, class:"form-control" %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4"><%= f.label :tipo %>
						<br>
					</label>
					<div class="col-lg-4">
						<%= f.select :tipo, [['Pessoa Física', 'PF'], ['Pessoa Jurídica', 'PJ']], {}, {class: "form-control", onclick: "atualizarDocumento()"} %>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4"><%= f.label :documento %></label>
					<div id="documento" class="col-lg-4">
						<div class="input-group">
							<% if f.object.tipo == 'PJ' %>
								<%= f.text_field :documento, {:class => "form-control", 'data-mask' => "99.999.999/9999-99"} %>
								<%= content_tag :span, '99.999.999/9999-99', class: "input-group-addon" %>
							<% else %>
								<%= f.text_field :documento, {:class => "form-control", 'data-mask' => "999.999.999-99"} %>
								<%= content_tag :span, '999.999.999-99', class: "input-group-addon" %>
							<% end %>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label col-lg-4"><%= f.label :telefone %></label>
					<div class="col-lg-4">
						<div class="input-group">
							<%= f.text_field :telefone, {:class => "form-control", 'data-mask' => "(99) 99999-9999"} %>
							<%= content_tag :span, '(99) 99999-9999', class: "input-group-addon" %>
						</div>

					</div>
				</div>

				<div class="form-actions no-margin-bottom">
					<%= f.submit class: "btn btn-primary" %>
				</div>

				<% end %>
			</div>
		</div>
	</div><!-- /.col-lg-12 -->
</div><!-- /.row -->

<!--jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-Validation-Engine/2.6.4/languages/jquery.validationEngine-en.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-Validation-Engine/2.6.4/jquery.validationEngine.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>

<script>
	(function($) {
		"use strict";

		Metis.formValidation = function() {

			$('#block-validate').validate({
				rules : {
					"cliente[razaosocial]" : "required",
					"cliente[nomefantasia]" : "required",
					"cliente[tipo]" : "required",
					"cliente[documento]" : "required",
					"cliente[telefone]" : "required",
				},
				errorClass : 'help-block',
				errorElement : 'span',
				highlight : function(element, errorClass, validClass) {
					$(element).parents('.form-group').removeClass('has-success').addClass('has-error');
				},
				unhighlight : function(element, errorClass, validClass) {
					$(element).parents('.form-group').removeClass('has-error').addClass('has-success');
				}
			});
			/*----------- END validate CODE -------------------------*/
		};

		return Metis;
	})(jQuery);
	;
	Metis.formValidation();
	function atualizarDocumento() {
	  	 
	} 
</script>